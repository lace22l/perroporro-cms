{% extends 'base_admin.html.twig' %}

{% block title %}InfoCard index{% endblock %}

{% block body %}
    <h1>InfoCard index</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>CardBody</th>
                <th>ColSize</th>
                <th>Ordering</th>
                <th>ColOffset</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for info_card in info_cards %}
            <tr>
                <td>{{ info_card.id }}</td>
                <td>{{ info_card.title }}</td>
                <td>{{ info_card.cardBody }}</td>
                <td>{{ info_card.colSize }}</td>
                <td>{{ info_card.ordering }}</td>
                <td>{{ info_card.colOffset }}</td>
                <td>
                    <a href="{{ path('app_info_card_show', {'id': info_card.id}) }}">show</a>
                    <a href="{{ path('app_info_card_edit', {'id': info_card.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_info_card_new') }}">Create new</a>
{% endblock %}
