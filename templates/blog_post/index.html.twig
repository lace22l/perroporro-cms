{% extends 'base_admin.html.twig' %}

{% block title %}BlogPost index{% endblock %}

{% block body %}
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">

            Blog Post
        </h1>
        <p class="lead">
        </p>
    </div>

    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12 text-center ">
                <div class="card square mb-4 mx-auto">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal"> A</h4>
                    </div>
                    <div class="card-body">

                        <table class="table table-responsive">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Content</th>
                                <th>CreatedAt</th>
                                <th>PublishedAt</th>
                                <th>DeletedAt</th>
                                <th>UpdatedAt</th>
                                <th>Tags</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for blog_post in blog_posts %}
                                <tr>
                                    <td>{{ blog_post.id }}</td>
                                    <td>{{ blog_post.title }}</td>
                                    <td>{{ blog_post.content }}</td>
                                    <td>{{ blog_post.createdAt ? blog_post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ blog_post.publishedAt ? blog_post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ blog_post.deletedAt ? blog_post.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ blog_post.updatedAt ? blog_post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ blog_post.tags }}</td>
                                    <td>
                                        <a href="{{ path('app_blog_post_show', {'id': blog_post.id}) }}">show</a>
                                        <a href="{{ path('app_blog_post_edit', {'id': blog_post.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="9">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <a href="{{ path('app_blog_post_new') }}">Create new</a>
                    </div>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
